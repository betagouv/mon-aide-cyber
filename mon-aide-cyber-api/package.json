{
  "name": "mon-aide-cyber-api",
  "version": "0.0.0",
  "description": "API de MonAideCyber",
  "scripts": {
    "build": "knex migrate:latest --knexfile src/infrastructure/entrepots/postgres/knexfile.ts --migrations-directory migrations",
    "start": "ts-node --transpile-only --require dotenv/config index.ts",
    "dev": "knex migrate:latest --knexfile src/infrastructure/entrepots/postgres/knexfile.ts --migrations-directory migrations && nodemon --require dotenv/config index.ts",
    "administration:cree-aidant": "ts-node --transpile-only --require dotenv/config src/administration/aidant/commande.ts",
    "administration:importe-aidants": "ts-node --transpile-only --require dotenv/config src/administration/aidants/commande.ts",
    "ci:initialise": "ts-node --transpile-only --require dotenv/config test/infrastructure/entrepots/postgres/integration_continue.ts",
    "test": "tsc --noEmit && vitest run --config vitest.config.ts --reporter verbose",
    "test:coverage": "vitest --config vitest.config.ts run --coverage",
    "test:coverage:ui": "vitest --config vitest.config.ts --ui --coverage --reporter verbose",
    "test:watch": "vitest --config vitest.config.ts --ui --reporter verbose"
  },
  "dependencies": {
    "@sentry/node": "^7.76.0",
    "@types/cookie-session": "^2.0.47",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lusca": "^1.7.4",
    "body-parser": "^1.20.2",
    "commander": "^11.1.0",
    "cookie-session": "^2.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "lusca": "^1.7.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "pug": "^3.0.2",
    "puppeteer": "^21.3.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.199",
    "@types/pg": "^8.10.5",
    "@types/pug": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "^8.43.0",
    "light-my-request": "^5.11.0",
    "lodash.clonedeep": "^4.5.0",
    "nodemon": "^2.0.22",
    "vitest": "^1.2.0"
  }
}
