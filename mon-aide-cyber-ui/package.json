{
  "name": "mon-aide-cyber-ui",
  "private": true,
  "version": "0.0.0",
  "description": "Interface graphique de Mon aide cyber",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "dev2": "vite dev",
    "build": "vite build",
    "build:storybook": "storybook build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "tsc -p test/tsconfig.test.json && vitest run --config vitest.config.ts",
    "test:coverage": "vitest --config vitest.config.ts run --coverage",
    "test:watch": "vitest --config vitest.config.ts --ui --reporter verbose",
    "test:storybook": "test-storybook"
  },
  "dependencies": {
    "@babel/runtime": ">=7.26.10",
    "@gouvfr/dsfr": "^1.11.0",
    "@lab-anssi/ui-kit": "1.13.0",
    "@tanstack/react-query": "^5.59.15",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.10",
    "react-router-dom": "^6.14.0"
  },
  "devDependencies": {
    "@storybook/addon-links": "^9.0.4",
    "@storybook/react-vite": "^9.0.4",
    "@storybook/test-runner": "^0.22.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.66",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "eslint-plugin-storybook": "^9.0.4",
    "happy-dom": "^15.10.2",
    "prop-types": "^15.8.1",
    "sass": "^1.63.6",
    "storybook": "^9.0.4",
    "storybook-addon-remix-react-router": "^3.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "overrides": {
    "storybook": "$storybook"
  }
}
